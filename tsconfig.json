{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "jsx": "react",
        "lib" :[
            "es2016",
            "dom"
        ],
        "types": [
            "electron",
            "webpack-env"
        ]
    },
    "exclude": [
        "node_modules",
        "node_modules/@types/react-dom/node_modules", // workaround for @types/react-dom wrongly containing @types/react
        "build"
    ],
    "compileOnSave": false
}
